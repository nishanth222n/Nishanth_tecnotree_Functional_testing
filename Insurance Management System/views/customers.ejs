<!DOCTYPE html>
<html>
<head>
	<title>Customer Table</title>
	<style>
		table {
			border-collapse: collapse;
			width: 100%;
		}

		th, td {
			text-align: left;
			padding: 8px;
		}

		th {
			background-color: #4CAF50;
			color: white;
		}

		.delete-btn {
			background-color: #f44336;
			border: none;
			color: white;
			padding: 5px 10px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 14px;
			border-radius: 5px;
			cursor: pointer;
		}

	</style>
</head>
<body>
	<h2>Customer Table</h2>
	<table>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Phone Number</th>
			<th>Action</th>
		</tr>
		<% customers.forEach(function(customer) { %>
			<tr>
				<td><%= customer.customer_id %></td>
				<td><%= customer.name %></td>
				<td><%= customer.email_address %></td>
				<td><%= customer.phone_number %></td>
				<td>
					<form method="POST" action="/customer/<%= customer.customer_id %>/delete">
						<button type="submit" class="delete-btn">Delete</button>
					</form>
				</td>
			</tr>
		<% }); %>
	</table>
</body>
</html>
